<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.EventPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/onPrimaryColor</item>

        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/onSecondaryColor</item>

        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surfaceColor</item>
        <item name="colorOnSurface">@color/onSurfaceColor</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>

        <item name="floatingActionButtonStyle">@style/Widget.MaterialComponents.FloatingActionButton</item>

        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>

    <style name="CalendarWeekDayText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomGridViewStyle" parent="@android:style/Widget.GridView">
        <item name="android:horizontalSpacing">0dp</item>
        <item name="android:verticalSpacing">0dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:numColumns">7</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ThemeOverlay.EventPlanner.Card" parent="">
        <item name="colorSurface">@color/cardBackgroundColor</item>
        <item name="colorOnSurface">@color/cardTextColorPrimary</item>
        <item name="android:textColorPrimary">@color/cardTextColorPrimary</item>
        <item name="android:textColorSecondary">@color/cardTextColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="ThemeOverlay.EventPlanner.FAB" parent="">
        <item name="colorSecondary">@color/fabBackgroundColor</item>
        <item name="colorOnSecondary">@color/fabContentColor</item>
    </style>

    <style name="ThemeOverlay.EventPlanner.TextInputLayout" parent="">
        <item name="android:textColor">@color/inputTextColor</item>
        <item name="android:textColorHint">@color/inputHintColor</item>
        <item name="boxStrokeColor">@color/inputBoxStrokeColor</item>
    </style>

</resources>